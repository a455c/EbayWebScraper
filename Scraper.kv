#:kivy 2.1.0

<ScrapeScreen>:
    grid:grid

    GridLayout:
        id: grid
        padding:40
        rows: 3
        size: root.width, root.height
        pos : 0,0

        TextInput:
            id: scrape_url
            text: 'https://www.ebay.co.uk/sch/i.html?_from=R40&_trksid=p4432023.m570.l1313&_nkw=xbox+one&_sacat=0'

        TextInput:
            id: max_listing_price
            text: '50'

        Button:
            text: 'Scrape Page'
            on_release:
                root.scrape_page_btn()


<ResultScreen>:
    grid: grid
    lsgrid:lsgrid

    GridLayout:
        id:grid
        size:root.width, root.height
        pos:0,0
        cols: 4
        rows: 10
        padding: 20
        spacing: 10
        row_force_default: True
        row_default_height: 40

    FloatLayout:
        id:lsgrid
        cols:2
